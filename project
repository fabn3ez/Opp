import java.util.ArrayList;
import java.util.Scanner;
import java.text.SimpleDateFormat;
import java.util.Date;

public class UniversityExamination {

    static class Student {
        String name;
        String id;
        int[] scores = new int[5];
        double average;
        char grade;
        String recommendation;

        public void calculateAverageAndGrade() {
            int total = 0;
            for (int score : scores) {
                total += score;
            }
            average = total / 5.0;
            grade = calculateGrade(average);
            recommendation = getRecommendation(average);
        }

        private char calculateGrade(double average) {
            if (average >= 70) return 'A';
            else if (average >= 60) return 'B';
            else if (average >= 50) return 'C';
            else if (average >= 40) return 'D';
            else return 'F';
        }

        private String getRecommendation(double average) {
            if (average >= 70) return "Excellent";
            else if (average >= 60) return "Good";
            else if (average >= 50) return "Fair";
            else return "Poor";
        }
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        ArrayList<Student> students = new ArrayList<>(); // Use ArrayList to store students

        // Input student details
        for (int i = 0; i < 1; i++) { // Change the loop condition if you want to input more than one student
            Student student = new Student();
            System.out.println("Enter details for student " + (students.size() + 1) + ":");

            System.out.print("Enter Student Name: ");
            student.name = scanner.nextLine();

            System.out.print("Enter Student ID: ");
            student.id = scanner.nextLine();

            // Input scores for specific subjects
            String[] subjects = {"Math", "IT Fundamentals", "Management", "Programming", "Economics"};
            for (int j = 0; j < subjects.length; j++) {
                System.out.print("Enter score for " + subjects[j] + ": ");
                student.scores[j] = scanner.nextInt();
            }
            scanner.nextLine(); // Consume newline after integer input

            // Calculate average and grade for the student
            student.calculateAverageAndGrade();
            students.add(student); // Add the student to the ArrayList
        }

        // Display report cards
        System.out.println("\nGenerating report cards...\n");
        for (Student student : students) {
            displayReportCard(student);
        }

        scanner.close();
    }

    private static void displayReportCard(Student student) {
        System.out.println("Report Card for " + student.name + " (ID: " + student.id + ")");
        System.out.println("-----------------------------------------------------");
        for (int j = 0; j < 5; j++) {
            System.out.println("Subject " + (j + 1) + " Score: " + student.scores[j]);
        }
        System.out.printf("Average Score: %.2f\n", student.average);
        System.out.println("Grade: " + student.grade);
        System.out.println("Recommendation: " + student.recommendation);
        System.out.println("Date: " + new SimpleDateFormat("yyyy-MM-dd").format(new Date()));
        System.out.println();
    }
}
